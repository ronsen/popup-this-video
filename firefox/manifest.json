{
	"manifest_version": 2,
	"name": "Popup This Video",
	"version": "2.0.2",
	"description": "Popup any video from the right click menu",
	"permissions": ["contextMenus", "tabs"],
	"background": {
		"scripts": [
			"background.js",
			"youtube.js",
			"vimeo.js",
			"twitch.js",
			"dailymotion.js",
			"viddsee.js",
			"bilibili.js",
			"odysee.js",
			"bitchute.js",
			"facebook.js",
			"kick.js",
			"vidio.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/icon-16x16.png",
			"32": "icons/icon-32x32.png"
		}
	}
}